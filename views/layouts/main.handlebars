  <script type="text/javascript">

    $(document).ready(function() {

        $("#s").click(function() {
            var x = $("#z").val();
            // console.log(x);
            document.getElementById('z').value = "";
            $.ajax({
                url: '/addbook?q=' + x,
                type: 'GET',
                dataType: 'json',
                success: function(data) {
                    $("#books").append('<div class="cover" id="' + data._id + '"><img alt="' + data.title + '" src="' + data.img + '"><button type="button" class="close">Ã—</button></div>')

                }
            });
        });

        $('#books').on('click', 'button.close', function(events){

            var par = $(this).parent();
            $.ajax({
                url: '/deletebook?q=' + par.prop('id'),
                type: 'GET',
                dataType: 'json',
                success: function() {
                    par.remove();
                }
            });
        });

        $('#books').on('click', 'button.trade', function(events){
            var par = $(this).parent();
            $.ajax({
                url: '/tradebook?q=' + par.prop('id'),
                type: 'GET',
                dataType: 'json',
                success: function(check) {
                    $("body>div.container").prepend('<p class="alert alert-success">' + check.status + '</p>');
                }
            });
        });

        $("#trad").click(function(){
